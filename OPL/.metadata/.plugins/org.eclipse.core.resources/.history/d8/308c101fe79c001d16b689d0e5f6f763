using CP;

int nb_sommet = ...;
range sommet = 1..nb_sommet;

int seuil[sommet] = ...;

{int} edge[sommet] = ...;

dvar int x[sommet] in 1..2;

subject to {
	forall(i in sommet) (x[i] == 1) => (sum(j in edge[i]) (x[j] == 1) < seuil[i]);
	forall(i in sommet) (x[i] == 2) => (sum(j in edge[i]) (x[j] == 2) < seuil[i]);
//	forall(i in sommet) (sum(j in edge[i]) (x[j] == x[i]) < seuil[i]);

}