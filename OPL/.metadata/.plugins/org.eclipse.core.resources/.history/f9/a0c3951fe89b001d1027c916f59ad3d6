using CP;

int nb_tache = ...;
range tache = 1..nb_tache;

int nb_personne = ...;
range personne = 1..nb_personne;

tuple affecation_possible {int t; int p;};
{affecation_possible} couple = ...;

dvar boolean x[couple];
dvar int max_tache in tache;

minimize max_tache;

subject to {
	forall(i in tache) {sum (<i, j> in couple) x[<i, j>] == 1;};
//	forall(j in personne) (sum (<i, j> in couple) x[<i, j>] <= max_tache);
	max_tache == max(j in personne) (sum(<i,j> in couple) x[<i,j>]);
}